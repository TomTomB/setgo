{
  "name": "vite-react-wasm-appisms",
  "version": "1.0.0",
  "description": "yarn lerna monorepo for all of the popular isms.",
  "main": "index.js",
  "author": "alejandro quesada",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "pnpm dlx git-cz",
    "start": "lerna run --scope setgo dev --stream",
    "build": "lerna run --scope client build",
    "tsc": "lerna run tsc",
    "lint": "lerna run lint",
    "format": "prettier --write .",
    "postinstall": "husky install"
  },
  "workspaces": [
    "packages/**"
  ],
  "devDependencies": {
    "git-format-staged": "^2.1.2",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "pnpm lint && pnpm format"
  }
}
