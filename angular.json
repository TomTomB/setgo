{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "setgo",
  "schematics": {
    "@nrwl/angular": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      },
      "storybook-configuration": {
        "linter": "eslint"
      }
    },
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "projects": {
    "firebase": {
      "root": "apps/firebase",
      "sourceRoot": "apps/firebase/src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@simondotm/nx-firebase:build",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "outputPath": "dist/apps/firebase",
            "main": "apps/firebase/src/index.ts",
            "tsConfig": "apps/firebase/tsconfig.app.json",
            "packageJson": "apps/firebase/package.json",
            "assets": [
              "apps/firebase/*.md"
            ]
          }
        },
        "serve": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "nx run firebase:build --with-deps && nx run firebase:build --watch"
              },
              {
                "command": "firebase emulators:start --config firebase.firebase.json"
              }
            ],
            "parallel": true
          }
        },
        "deploy": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "command": "firebase deploy --config firebase.firebase.json"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/firebase/**/*.ts"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/apps/firebase"
          ],
          "options": {
            "jestConfig": "apps/firebase/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "setgo": {
      "projectType": "application",
      "root": "apps/setgo",
      "sourceRoot": "apps/setgo/src",
      "prefix": "setgo",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "outputs": [
            "{options.outputPath}"
          ],
          "options": {
            "outputPath": "dist/apps/setgo/browser",
            "index": "apps/setgo/src/index.html",
            "main": "apps/setgo/src/main.ts",
            "polyfills": "apps/setgo/src/polyfills.ts",
            "tsConfig": "apps/setgo/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "apps/setgo/src/favicon.ico",
              "apps/setgo/src/assets"
            ],
            "styles": [
              "apps/setgo/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "apps/setgo/src/environments/environment.ts",
                  "with": "apps/setgo/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "setgo:build:production"
            },
            "development": {
              "browserTarget": "setgo:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "setgo:build"
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/setgo/src/**/*.ts",
              "apps/setgo/src/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": [
            "coverage/apps/setgo"
          ],
          "options": {
            "jestConfig": "apps/setgo/jest.config.js",
            "passWithNoTests": true
          }
        },
        "server": {
          "builder": "@angular-devkit/build-angular:server",
          "options": {
            "outputPath": "dist/apps/setgo/server",
            "main": "apps/setgo/server.ts",
            "tsConfig": "apps/setgo/tsconfig.server.json",
            "inlineStyleLanguage": "scss"
          },
          "configurations": {
            "production": {
              "outputHashing": "media",
              "fileReplacements": [
                {
                  "replace": "apps/setgo/src/environments/environment.ts",
                  "with": "apps/setgo/src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "extractLicenses": false
            }
          },
          "defaultConfiguration": "production"
        },
        "serve-ssr": {
          "builder": "@nguniversal/builders:ssr-dev-server",
          "configurations": {
            "development": {
              "browserTarget": "setgo:build:development",
              "serverTarget": "setgo:server:development"
            },
            "production": {
              "browserTarget": "setgo:build:production",
              "serverTarget": "setgo:server:production"
            }
          },
          "defaultConfiguration": "development"
        },
        "prerender": {
          "builder": "@nguniversal/builders:prerender",
          "options": {
            "routes": [
              "/"
            ]
          },
          "configurations": {
            "production": {
              "browserTarget": "setgo:build:production",
              "serverTarget": "setgo:server:production"
            },
            "development": {
              "browserTarget": "setgo:build:development",
              "serverTarget": "setgo:server:development"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "setgo-e2e": {
      "root": "apps/setgo-e2e",
      "sourceRoot": "apps/setgo-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/setgo-e2e/cypress.json",
            "tsConfig": "apps/setgo-e2e/tsconfig.e2e.json",
            "devServerTarget": "setgo:serve:development"
          },
          "configurations": {
            "production": {
              "devServerTarget": "setgo:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "apps/setgo-e2e/**/*.{js,ts}"
            ]
          }
        }
      }
    }
  }
}